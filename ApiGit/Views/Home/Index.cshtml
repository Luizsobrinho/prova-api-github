@model IEnumerable<ApiGit.Models.Usuario>
@{
    ViewData["Title"] = "Home Page";
}

<div class="main-content-inner">
    <div class="row">

        <div class="col-lg-12 mt-5">
            <div>

                <div class="card-body">

                    <div class="row mb-2">
                        <div class="col-sm-11">
                            <h4 class="header-title">Buscar Usuario</h4>
                        </div>
                        <div class="col-sm-11">

                            @using (Html.BeginForm("Buscar", "Home", FormMethod.Get))
                            {
                                <span>Informe o nome do Usuario</span>
                                @Html.TextBox("buscar")
                                <input type="submit" value="Procurar" class="btn btn-outline-primary" />
                            }

                        </div>

                    </div>



                    <table class="table table-striped table-hover">
                        <thead>
                            <tr class="success text-black-50">
                                <th scope="col" style="text-align:center">
                                    @Html.DisplayNameFor(model => model.Login)
                                </th>
                                <th scope="col" style="text-align:center">
                                    @Html.DisplayNameFor(model => model.Url)
                                </th>
                                <th scope="col" style="text-align:center">
                                    @Html.DisplayNameFor(model => model.RepositorioUrl)
                                </th>
                                <th scope="col" style="text-align:center">Detalhe</th>
                            </tr>
                        </thead>
                        <tbody>

                            @if (Model != null)
                            {

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="text-align:center">
                                            @Html.DisplayFor(modelItem => item.Login)
                                        </td>
                                        <td style="text-align:center">
                                            @Html.DisplayFor(modelItem => item.Url)
                                        </td>
                                        <td style="text-align:center">
                                            @Html.DisplayFor(modelItem => item.RepositorioUrl)
                                        </td>
                                        <td style="text-align:center">
                                            <a>@Html.ActionLink(@String.Format("Detalhes"), "Index", "Repositorio", new { url = item.RepositorioUrl })</a>
                                        </td>
                                    </tr>

                                }

                            }
                        </tbody>

                    </table>
                </div>

            </div>

        </div>

    </div>
</div>
